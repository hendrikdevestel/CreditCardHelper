<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.1</Version>
    <Authors>Devestel</Authors>
    <Company>Devestel</Company>
    <Description>General helper to validate creditcard numbers and detect hidden numbers in text in .NET Core</Description>
